{
  "title": "JSON schema for Oradew dbconfig file",
  "$schema": "http://json-schema.org/draft-06/schema#",
  "type": "object",
  "properties": {
    "DEV": {
      "type": "object",
      "$ref": "#/definitions/ConnectionConfig",
      "default": {
        "connectString": "localhost/orclpdb",
        "users": [
          {
            "user": "hr",
            "password": "welcome"
          },
          {
            "user": "hr1",
            "password": "welcome1",
            "default": true
          }
        ]
      }
    },
    "TEST": {
      "type": "object",
      "$ref": "#/definitions/ConnectionConfig",
      "default": {
        "connectString": "localhost/orclpdb",
        "users": [
          {
            "user": "hr",
            "password": "welcome"
          }
        ]
      }
    },
    "UAT": {
      "type": "object",
      "$ref": "#/definitions/ConnectionConfig",
      "default": {
        "connectString": "localhost/orclpdb",
        "users": [
          {
            "user": "hr",
            "password": "welcome"
          }
        ]
      }
    }
  },
  "definitions": {
    "ConnectionConfig": {
      "type": "object",
      "properties": {
        "connectString": {
          "type": "string"
        },
        "users": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "user": {
                "type": "string"
              },
              "password": {
                "type": "string"
              },
              "schemas": {
                "description": "User's schemas. \nIf \"user\" doesn't own any object, at least one schema must be specified.",
                "type": "array"
              },
              "default": {
                "description": "Default user for environment? \nWhenever user can't be extracted from path, default user configuration (\"default\": true) will be used for connection. (ex. for deploy)",
                "type": "boolean",
                "default": false
              },
              "disabled": {
                "description": "User disabled? \nDisabled user is not available for connection.",
                "type": "boolean",
                "default": false
              }
            },
            "required": ["user", "password"],
            "default": {
              "user": "hr",
              "password": "welcome"
            }
          }
        }
      },
      "required": ["connectString", "users"]
    }
  }
}
