{
	"rules": {
		"max-line-length": [
			false,
			100
		],
		"no-string-throw": true,
		"no-unused-expression": true,
		"no-duplicate-variable": true,
		"curly": true,
		"class-name": true,
		"semicolon": [
			true,
			"always",
			"ignore-bound-class-methods"
		],
		"triple-equals": true,
		"quotemark": [
			true,
			"double",
			"avoid-escape"
		],
		"indent": true
	},
	"defaultSeverity": "warning"
}